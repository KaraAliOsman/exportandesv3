---
interface MaterialType {
  name: string;
  price: string;
  description: string;
}

interface Props {
  title: string;
  subtitle: string;
  description: string;
  heroColor: string;
  materials: MaterialType[];
  seoContent: string;
  whatsappMessage: string;
}

const {
  title,
  subtitle,
  description,
  heroColor,
  materials,
  seoContent,
  whatsappMessage,
} = Astro.props;

const whatsappUrl = `https://wa.me/56933301114?text=${encodeURIComponent(whatsappMessage)}`;
---

<article>
  <!-- Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-industrial"></div>
    <div class={`absolute top-0 right-0 w-96 h-96 ${heroColor} rounded-full blur-3xl opacity-10`}></div>
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>

    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1.5 rounded-full glass text-sm text-accent-teal font-heading font-medium mb-6">
          Materiales
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-bold text-white mb-6">
          {title}
        </h1>
        <p class="text-xl text-gray-400 leading-relaxed mb-8">
          {subtitle}
        </p>
        <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn-whatsapp text-base px-8 py-4">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Vender {title.split(' ')[0]}
        </a>
      </div>
    </div>
  </section>

  <!-- Description -->
  <section class="section-wrapper relative">
    <div class="absolute inset-0 bg-slate-dark/30"></div>
    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-3xl font-heading font-bold text-white mb-6">
            ¿Qué tipos de {title.toLowerCase()} compramos?
          </h2>
          <p class="text-gray-400 text-lg leading-relaxed mb-8">
            {description}
          </p>

          <!-- Material types list -->
          <div class="space-y-4">
            {materials.map((mat) => (
              <div class="glass rounded-xl p-5 flex items-center justify-between group hover:border-accent-teal/30 transition-all duration-300">
                <div>
                  <h3 class="text-white font-heading font-semibold group-hover:text-accent-teal transition-colors">{mat.name}</h3>
                  <p class="text-sm text-gray-500">{mat.description}</p>
                </div>
                <div class="text-right shrink-0 ml-4">
                  <div class="font-mono text-2xl font-bold text-accent-teal">{mat.price}</div>
                  <div class="text-xs text-gray-600">/kg</div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- SEO Content -->
        <div class="glass rounded-2xl p-8 lg:sticky lg:top-28">
          <h2 class="text-2xl font-heading font-bold text-white mb-6">
            Guía completa
          </h2>
          <div class="prose prose-sm prose-invert max-w-none text-gray-400 leading-relaxed space-y-4" set:html={seoContent} />

          <div class="mt-8 pt-6 border-t border-white/10">
            <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn-primary w-full justify-center">
              Cotizar Ahora
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</article>
