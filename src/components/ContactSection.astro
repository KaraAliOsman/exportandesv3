---
const whatsappUrl = 'https://wa.me/56933301114?text=Hola,%20vi%20su%20web%20y%20quiero%20vender%20mi%20material.';
---

<section class="section-wrapper relative overflow-hidden">
  <div class="absolute inset-0 bg-carbon"></div>

  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Left: Contact Info + Map -->
      <div class="space-y-8">
        <div>
          <span class="inline-block px-4 py-1.5 rounded-full glass text-sm text-accent-teal font-heading font-medium mb-4">
            Contáctanos
          </span>
          <h2 class="text-3xl sm:text-4xl font-heading font-bold text-white mb-4">
            ¿Listo para <span class="text-gradient">vender</span>?
          </h2>
          <p class="text-gray-400 text-lg">
            Comunícate con nosotros directamente por WhatsApp para una cotización inmediata, o visítanos en nuestra bodega.
          </p>
        </div>

        <!-- Contact cards -->
        <div class="space-y-4">
          <a href={whatsappUrl} target="_blank" rel="noopener noreferrer"
            class="flex items-center gap-4 glass rounded-xl p-5 group hover:border-[#25D366]/30 transition-all duration-300">
            <div class="w-14 h-14 rounded-xl bg-[#25D366]/15 flex items-center justify-center shrink-0 group-hover:bg-[#25D366]/25 transition-colors">
              <svg width="26" height="26" viewBox="0 0 24 24" fill="#25D366">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <div>
              <div class="text-white font-heading font-semibold group-hover:text-[#25D366] transition-colors">WhatsApp Directo</div>
              <div class="text-sm text-gray-500">+56 9 3330 1114 — Respuesta en minutos</div>
            </div>
          </a>

          <div class="flex items-center gap-4 glass rounded-xl p-5">
            <div class="w-14 h-14 rounded-xl bg-accent-teal/15 flex items-center justify-center shrink-0">
              <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="#1B9C85" stroke-width="1.5"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0116 0z"/><circle cx="12" cy="10" r="3"/></svg>
            </div>
            <div>
              <div class="text-white font-heading font-semibold">Visítanos</div>
              <div class="text-sm text-gray-500">Av. Pedro de Valdivia 733, Concepción</div>
            </div>
          </div>

          <div class="flex items-center gap-4 glass rounded-xl p-5">
            <div class="w-14 h-14 rounded-xl bg-primary/15 flex items-center justify-center shrink-0">
              <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="#3282B8" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            </div>
            <div>
              <div class="text-white font-heading font-semibold">Horario</div>
              <div class="text-sm text-gray-500">Lunes a Viernes: 08:30 — 18:00</div>
            </div>
          </div>
        </div>

        <!-- Map -->
        <div class="glass rounded-2xl overflow-hidden h-[280px]">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3179.5!2d-73.0503!3d-36.827!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzbCsDQ5JzM3LjIiUyA3M8KwMDMnMDEuMSJX!5e0!3m2!1ses!2scl!4v1700000000000"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Ubicación de Exportandes en Concepción"
          ></iframe>
        </div>
      </div>

      <!-- Right: Contact Form -->
      <div>
        <div class="glass rounded-2xl p-8 lg:p-10 sticky top-28">
          <h3 class="text-2xl font-heading font-bold text-white mb-2">Envíanos tus datos</h3>
          <p class="text-gray-500 text-sm mb-8">Completa el formulario y te contactaremos por WhatsApp en minutos.</p>

          <form class="space-y-5" id="contact-form">
            <!-- Nombre -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-1.5">Nombre completo</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Juan Pérez"
                class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-600 text-sm focus:outline-none focus:ring-2 focus:ring-accent-teal/50 focus:border-accent-teal/50 transition-all"
              />
            </div>

            <!-- Teléfono -->
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-300 mb-1.5">Teléfono / WhatsApp</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                placeholder="+56 9 1234 5678"
                class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-600 text-sm focus:outline-none focus:ring-2 focus:ring-accent-teal/50 focus:border-accent-teal/50 transition-all"
              />
            </div>

            <!-- Material -->
            <div>
              <label for="material" class="block text-sm font-medium text-gray-300 mb-1.5">¿Qué material quieres vender?</label>
              <select
                id="material"
                name="material"
                required
                class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white text-sm focus:outline-none focus:ring-2 focus:ring-accent-teal/50 focus:border-accent-teal/50 transition-all appearance-none"
              >
                <option value="" class="bg-carbon">Selecciona un material...</option>
                <option value="cobre-1" class="bg-carbon">Cobre N°1 (Cable pelado)</option>
                <option value="cobre-2" class="bg-carbon">Cobre N°2 (Cable con plástico)</option>
                <option value="perfil-aluminio" class="bg-carbon">Perfil de Aluminio</option>
                <option value="aluminio-duro" class="bg-carbon">Aluminio Duro</option>
                <option value="latas" class="bg-carbon">Latas de Aluminio</option>
                <option value="radiadores" class="bg-carbon">Radiadores de Cobre</option>
                <option value="bronce" class="bg-carbon">Bronce</option>
                <option value="baterias" class="bg-carbon">Baterías</option>
                <option value="otro" class="bg-carbon">Otro material</option>
              </select>
            </div>

            <!-- Cantidad estimada -->
            <div>
              <label for="quantity" class="block text-sm font-medium text-gray-300 mb-1.5">Cantidad estimada (kg)</label>
              <input
                type="text"
                id="quantity"
                name="quantity"
                placeholder="Ej: 500 kg"
                class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-600 text-sm focus:outline-none focus:ring-2 focus:ring-accent-teal/50 focus:border-accent-teal/50 transition-all"
              />
            </div>

            <!-- Mensaje -->
            <div>
              <label for="message" class="block text-sm font-medium text-gray-300 mb-1.5">Mensaje (opcional)</label>
              <textarea
                id="message"
                name="message"
                rows="3"
                placeholder="Cuéntanos más detalles sobre tu material..."
                class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-600 text-sm focus:outline-none focus:ring-2 focus:ring-accent-teal/50 focus:border-accent-teal/50 transition-all resize-none"
              ></textarea>
            </div>

            <!-- Submit via WhatsApp -->
            <button
              type="submit"
              class="btn-whatsapp w-full justify-center text-base py-4"
            >
              <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Enviar por WhatsApp
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const name = formData.get('name') || '';
    const phone = formData.get('phone') || '';
    const material = formData.get('material') || '';
    const quantity = formData.get('quantity') || '';
    const message = formData.get('message') || '';

    const materialNames: Record<string, string> = {
      'cobre-1': 'Cobre N°1 (Cable pelado)',
      'cobre-2': 'Cobre N°2 (Cable con plástico)',
      'perfil-aluminio': 'Perfil de Aluminio',
      'aluminio-duro': 'Aluminio Duro',
      'latas': 'Latas de Aluminio',
      'radiadores': 'Radiadores de Cobre',
      'bronce': 'Bronce',
      'baterias': 'Baterías',
      'otro': 'Otro material',
    };

    const materialLabel = materialNames[material as string] || material;
    let text = `Hola, soy ${name}.\n`;
    text += `Teléfono: ${phone}\n`;
    text += `Quiero vender: ${materialLabel}\n`;
    if (quantity) text += `Cantidad estimada: ${quantity}\n`;
    if (message) text += `Detalle: ${message}\n`;
    text += `\n(Enviado desde exportandes.cl)`;

    window.open(`https://wa.me/56933301114?text=${encodeURIComponent(text)}`, '_blank');
  });
</script>
