---
interface Props {
  name: string;
  price: string;
  unit?: string;
  trend: 'up' | 'down' | 'stable';
  trendValue?: string;
  description?: string;
  iconColor: string;
  iconBg: string;
  whatsappMessage: string;
}

const {
  name,
  price,
  unit = '/kg',
  trend,
  trendValue = '',
  description = '',
  iconColor,
  iconBg,
  whatsappMessage,
} = Astro.props;

const whatsappUrl = `https://wa.me/56933301114?text=${encodeURIComponent(whatsappMessage)}`;

const trendConfig = {
  up: { color: 'text-green-400', bg: 'bg-green-400/10', label: 'Alza', icon: 'M18 15l-6-6-6 6' },
  down: { color: 'text-red-400', bg: 'bg-red-400/10', label: 'Baja', icon: 'M6 9l6 6 6-6' },
  stable: { color: 'text-yellow-400', bg: 'bg-yellow-400/10', label: 'Estable', icon: 'M5 12h14' },
};

const t = trendConfig[trend];
---

<article class="group relative glass rounded-2xl p-6 transition-all duration-500 hover:border-accent-teal/30 hover:shadow-accent-teal/10 hover:shadow-2xl">
  <!-- Glow effect on hover -->
  <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-gradient-to-br from-accent-teal/5 via-transparent to-primary/5"></div>

  <div class="relative z-10">
    <!-- Header: Icon + Trend -->
    <div class="flex items-start justify-between mb-4">
      <div class={`w-14 h-14 rounded-2xl ${iconBg} flex items-center justify-center`}>
        <slot name="icon">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke={iconColor} stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 6v12M8 10l4-4 4 4"/>
          </svg>
        </slot>
      </div>
      <div class={`flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-mono font-medium ${t.color} ${t.bg}`}>
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
          <path d={t.icon}/>
        </svg>
        {trendValue || t.label}
      </div>
    </div>

    <!-- Material name -->
    <h3 class="text-lg font-heading font-semibold text-white mb-1 group-hover:text-accent-teal transition-colors duration-300">
      {name}
    </h3>
    {description && (
      <p class="text-sm text-gray-500 mb-4">{description}</p>
    )}

    <!-- Price -->
    <div class="mb-6">
      <span class="font-mono text-4xl font-bold text-accent-teal tabular-nums tracking-tight">
        {price}
      </span>
      <span class="text-gray-500 text-sm ml-1">{unit}</span>
    </div>

    <!-- CTA Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center justify-center gap-2 w-full py-3.5 rounded-xl bg-accent-teal/10 text-accent-teal font-heading font-semibold text-sm transition-all duration-300 group-hover:bg-[#25D366] group-hover:text-white group-hover:shadow-lg group-hover:shadow-[#25D366]/20"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="animate-pulse-slow">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      VENDER ESTO
    </a>
  </div>
</article>
