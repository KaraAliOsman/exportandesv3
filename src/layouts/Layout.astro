---
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  schema?: object | object[];
  canonical?: string;
}

const {
  title,
  description = 'Exportandes compra chatarra de cobre, aluminio y metales al mejor precio en Concepcion y Biobio. Pago inmediato. Exportacion directa.',
  keywords = 'comprar chatarra Concepcion, vender perfil aluminio Biobio, precio cobre kg Chile',
  schema,
  canonical,
} = Astro.props;

const canonicalURL = canonical
  ? new URL(canonical, Astro.site)
  : new URL(Astro.url.pathname, Astro.site);

const defaultSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Exportandes",
  "description": description,
  "image": "/images/og-default.jpg",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Av. Pedro de Valdivia 733",
    "addressLocality": "Concepcion",
    "addressRegion": "Biobio",
    "postalCode": "4030000",
    "addressCountry": "CL"
  },
  "geo": { "@type": "GeoCoordinates", "latitude": -36.827, "longitude": -73.050 },
  "telephone": "+56933301114",
  "url": "https://exportandes.cl",
  "openingHours": "Mo-Fr 08:00-18:00",
  "priceRange": "$$",
  "founder": { "@type": "Person", "name": "[NOMBRE CEO]", "jobTitle": "CEO" },
  "sameAs": ["https://exportandes.cl"]
};

const schemas = schema
  ? Array.isArray(schema) ? [defaultSchema, ...schema] : [defaultSchema, schema]
  : [defaultSchema];
---

<!doctype html>
<html lang="es-CL">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Exportandes" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="es_CL" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@500;700&family=Montserrat:wght@600;700;800&display=swap" rel="stylesheet" />

    {schemas.map((s) => (
      <script type="application/ld+json" set:html={JSON.stringify(s)} />
    ))}
  </head>
  <body class="min-h-screen flex flex-col">
    <a href="#main-content" class="skip-link">Ir al contenido</a>
    <slot />
  </body>
</html>
