---
import Layout from '@/layouts/Layout.astro';
import Topbar from '@/components/Topbar.astro';
import Navbar from '@/components/Navbar.astro';
import Hero from '@/components/Hero.astro';
import PriceStrip from '@/components/PriceStrip.astro';
import WhyUs from '@/components/WhyUs.astro';
import ProcessSteps from '@/components/ProcessSteps.astro';
import TrustBar from '@/components/TrustBar.astro';
import PriceTable from '@/components/PriceTable.astro';
import FAQ from '@/components/FAQ.astro';
import Footer from '@/components/Footer.astro';
import StickyWhatsApp from '@/components/StickyWhatsApp.astro';

const homeFaq = [
  { question: 'Que materiales compran?', answer: 'Compramos perfil de aluminio, cobre (cable pelado, con plastico, radiadores), laton, bronce, acero inoxidable y mas. Consulta nuestra pagina de tarifas para ver la lista completa con precios.' },
  { question: 'Como recibo el pago?', answer: 'Pago inmediato al momento del pesaje. Transferencia bancaria o efectivo, tu eliges. Sin cheques ni plazos.' },
  { question: 'Hacen retiro a domicilio?', answer: 'Si. Para volumenes desde 200 kg coordinamos retiro con camion propio en toda la Region del Biobio. El retiro no tiene costo adicional.' },
  { question: 'Cual es el precio minimo de compra?', answer: 'No hay minimo. Aceptamos desde 1 kg. Para volumenes grandes (+1 tonelada) ofrecemos precios premium negociados.' },
];
---

<Layout
  title="Exportandes -- Compra de Chatarra y Metales al Mejor Precio | Concepcion, Biobio"
  description="Vendemos tu chatarra al mejor precio. Especialistas en perfil de aluminio y cobre. Pago inmediato, retiro en Biobio. Cotiza por WhatsApp."
  keywords="comprar chatarra Concepcion, vender perfil aluminio Biobio, precio cobre kg Chile, reciclaje metales Concepcion, chatarra aluminio precio"
>
  <Topbar />
  <Navbar />

  <main id="main-content">
    <Hero
      title='Compramos tu chatarra al mejor precio.<br /><span class="text-accent">Rapido. Seguro. Pagos al instante.</span>'
      subtitle="Especialistas en perfil de aluminio y cobre. Cobertura Biobio y todo Chile. Exportacion directa sin intermediarios."
      cta={{ label: 'Vender ahora -- cotizar en WhatsApp', href: 'https://wa.me/56933301114?text=Hola%20Exportandes%2C%20quiero%20vender%20mi%20material.' }}
      ctaSecondary={{ label: 'Ver tarifas', href: '/tarifas' }}
    />

    <PriceStrip />
    <WhyUs />
    <ProcessSteps />
    <TrustBar />

    <!-- Quick price table -->
    <section class="section bg-white">
      <div class="container-x">
        <p class="label">Tarifas actualizadas</p>
        <h2 class="text-3xl lg:text-4xl mb-8">Precios de compra</h2>
        <PriceTable />
        <p class="mt-4 text-xs text-base-light">* Precios referenciales por kg. Pueden variar segun volumen, calidad y mercado internacional. Febrero 2026.</p>
      </div>
    </section>

    <FAQ items={homeFaq} />
  </main>

  <Footer />
  <StickyWhatsApp />
</Layout>
