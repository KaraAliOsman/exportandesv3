---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar.astro';
import PriceTicker from '@/components/PriceTicker.astro';
import PriceTable from '@/components/PriceTable.astro';
import Footer from '@/components/Footer.astro';

const whatsappUrl = 'https://wa.me/56933301114?text=Hola,%20vi%20su%20web%20y%20quiero%20consultar%20precios.';
---

<Layout
  title="Lista de Precios de Metales 2026 — Cobre, Aluminio, Bronce | Exportandes"
  description="Precios actualizados de compra de cobre, aluminio, bronce y más en Concepción. Los mejores precios por kilo del mercado chileno. Cotiza por WhatsApp."
  keywords="precio kilo cobre Chile 2026, precio aluminio hoy Concepción, lista precios chatarra, precio cobre cable pelado, precio bronce Chile"
>
  <Navbar />

  <main>
    <!-- Page Header -->
    <section class="relative pt-32 pb-12 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-industrial"></div>
      <div class="absolute top-0 right-0 w-96 h-96 bg-accent-teal/5 rounded-full blur-3xl"></div>
      <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>

      <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <span class="inline-block px-4 py-1.5 rounded-full glass text-sm text-accent-teal font-heading font-medium mb-6">
          Precios Febrero 2026
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-bold text-white mb-6">
          Lista de <span class="text-gradient">Precios</span>
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl">
          Precios de compra por kilogramo en pesos chilenos. Actualizados diariamente
          según el mercado internacional. Válidos para la Región del Bio Bio.
        </p>
      </div>
    </section>

    <PriceTicker />
    <PriceTable />

    <!-- Volume Discount Section -->
    <section class="section-wrapper relative">
      <div class="absolute inset-0 bg-carbon"></div>
      <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="glass rounded-3xl p-8 lg:p-12 flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
          <div class="flex-1">
            <h2 class="text-2xl sm:text-3xl font-heading font-bold text-white mb-4">
              ¿Tienes más de <span class="text-accent-teal">1 tonelada</span>?
            </h2>
            <p class="text-gray-400 text-lg">
              Para volúmenes industriales ofrecemos precios premium negociados directamente.
              Retiro con camión propio en toda la región. Contáctanos para una cotización personalizada.
            </p>
          </div>
          <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn-whatsapp text-base px-8 py-4 shrink-0">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Cotización Industrial
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
