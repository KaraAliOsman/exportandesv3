---
import Layout from '@/layouts/Layout.astro';
import Topbar from '@/components/Topbar.astro';
import Navbar from '@/components/Navbar.astro';
import Hero from '@/components/Hero.astro';
import Footer from '@/components/Footer.astro';
import StickyWhatsApp from '@/components/StickyWhatsApp.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout
  title="Blog -- Guias de Reciclaje y Precios de Metales | Exportandes"
  description="Aprende a preparar tu chatarra, conoce precios actualizados y descubre como maximizar el valor de tus metales reciclados."
  keywords="blog reciclaje metales, guia vender chatarra, precio cobre actualizado, como reciclar aluminio"
>
  <Topbar />
  <Navbar />

  <main id="main-content">
    <Hero
      title='<span class="text-accent">Blog</span> y Recursos'
      subtitle="Guias practicas, precios del mercado y consejos para sacar el maximo valor a tu material."
      small
    />

    <section class="section bg-white">
      <div class="container-x">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="card group flex flex-col">
              <div class="flex flex-wrap gap-2 mb-3">
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="text-[10px] font-display font-semibold uppercase tracking-widest text-accent bg-accent/5 px-2 py-0.5 rounded">{tag}</span>
                ))}
              </div>
              <h2 class="font-display font-bold text-base group-hover:text-accent transition-colors flex-1">
                {post.data.title}
              </h2>
              <p class="text-sm text-base-light mt-2 line-clamp-2">{post.data.description}</p>
              <div class="mt-4 pt-3 border-t border-neutral-dark flex items-center justify-between text-xs text-base-light">
                <time datetime={post.data.publishDate.toISOString()}>
                  {post.data.publishDate.toLocaleDateString('es-CL', { year: 'numeric', month: 'short', day: 'numeric' })}
                </time>
                <span class="font-display font-semibold text-accent flex items-center gap-1">
                  Leer
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <StickyWhatsApp />
</Layout>
